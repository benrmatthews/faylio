<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'follow_form' if signed_in? %>
      </section>
  </aside>
  <div class="col-sm-6">
    <% if @user.fails.any? %>
      <h3><%= @user.fails.count %> fails</h3>
      <ol class="fails">
        <%= render @fails %>
      </ol>
      <%= will_paginate @fails %>
    <% end %>
  </div>
    <aside class="col-sm-3">
  </aside>

</div>