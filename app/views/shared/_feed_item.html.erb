<span class="headline">
  <h3><%= link_to feed_item.headline, feed_item %></h3>
</span>
<span class="timestamp user">
  <%= gravatar_for feed_item.user %><%= link_to feed_item.user.name, feed_item.user %> shared this <%= time_ago_in_words(feed_item.created_at) %> ago.
</span>
  <br>
<span class="timestamp user">
  <%= link_to image_tag("heart.png", alt: "Discover Tools and Resources", class: "home-image-center", size: "25"), vote_fail_path(feed_item, value: 1), method: "post" %>
  <%= feed_item.votes %> praised this fail<br>
</span>
<span class="timestamp user">
  <% if current_user?(feed_item.user) %>
  <%= link_to "Delete?", feed_item, method: :delete,
                                         data: { confirm: "You sure?" },
                                         title: feed_item.headline %>
  <% end %>