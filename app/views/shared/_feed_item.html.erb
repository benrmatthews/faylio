<li id="<%= feed_item.id %>">
  <span class="headline"><h4><%= gravatar_for feed_item.user %><%= link_to feed_item.headline, feed_item %></h4></span>
      <span class="timestamp user">
        Posted by <%= link_to feed_item.user.name, feed_item.user %> <%= time_ago_in_words(feed_item.created_at) %> ago.
      </span><br>
      <span class="timestamp user">
      <!-- <p>Tags: <%= raw fail.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p> -->
       <span class="timestamp user">
          Follow | <%= link_to "Comments", feed_item %> | Share
        </span><br>
       <% if current_user?(feed_item.user) %>
        <%= link_to "Delete?", feed_item, method: :delete,
                                         data: { confirm: "You sure?" },
                                         title: feed_item.headline %>
      <% end %>
</li>