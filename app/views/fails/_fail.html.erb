<table>
  <tr>
    <td>
      <%= gravatar_for fail.user %>
    </td>
    <td>
      <span class="headline"><h4><%= link_to fail.headline, fail %></h4></span>
      <span class="timestamp user">
    <% if current_user?(fail.user) %>
        <%= link_to "Delete?", fail, method: :delete,
                                         data: { confirm: "You sure?" },
                                         title: fail.headline %>
      <% end %>
</li>
    </td>
    <td>
      <%= link_to "up", vote_fail_path(fail, value: 1), method: "post" %><br>
      <%= fail.votes %><br>
      <%= link_to "down", vote_fail_path(fail, value: -1), method: "post" %>
    </span><br>
    </td>
  </tr>
</table>

