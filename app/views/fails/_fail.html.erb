<span class="headline">
  <h3><%= link_to fail.headline, fail %></h3>
</span>
<span class="timestamp user">
  <%= gravatar_for fail.user %><%= link_to fail.user.name, fail.user %> shared this <%= time_ago_in_words(fail.created_at) %> ago.
</span>
  <br>
<span class="timestamp user">
  <% if current_user.can_vote_for?(fail) %>
    <%= link_to image_tag("grey-heart.png", alt: "Praise this fail", size: "25"), vote_fail_path(fail, value: 1), method: "post" %>
  <% else %>
    <%= link_to image_tag("heart.png", alt: "You have praised this fail", size: "25") %>
  <% end %>
  <%= fail.votes %> praised this fail | <%= link_to "Comments", fail %><br>
</span>
<span class="timestamp user">
  <% if current_user?(fail.user) %>
  <%= link_to "Delete?", fail, method: :delete,
                                         data: { confirm: "You sure?" },
                                         title: fail.headline %>
  <% end %>