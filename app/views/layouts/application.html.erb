<!DOCTYPE html>
<html>
  <head>
    <meta name="google-site-verification" content="lSKh5kc2r-PCeFNyspwg2Xt4lh0nVFIfiGrMF4_Y2Rc" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "faylio" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Faylio" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
    </header>
    <main role="main">
        <div class="content">
          <div class="row">
              <div class="col-sm-12">
                <%= render 'layouts/messages' %>
                <%= yield %>
              </div>
          </div>
          <footer>
            <%= render 'layouts/footer' %>
          </footer>
        </div>
    </main>
  </body>
</html>

